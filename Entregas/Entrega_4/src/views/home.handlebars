<style>
    form {
        max-width: 200px; 
        margin-left: 10px;
    }

    input {
        width: 100%; 
        margin-bottom: 10px; 
    }
</style>
<h3>Crear un Producto</h3>
<form id="crearProductoForm" action="/api/products" method="post">
    Title: <input type="text" name="title" id="title">
    Description: <input type="text" name="description" id="description">
    Code: <input type="text" name="code" id="code">
    Price: <input type="number" name="price" id="price">
    Category: <input type="text" name="category" id="category">
    Thumbnail: <input type="text" name="thumbnail" id="thumbnail">
    Stock: <input type="number" name="stock" id="stock">
    <input type="submit" value="Crear">
</form>
<h3>Eliminar un Producto</h3>
<form id="eliminarProductoForm" action="" method="post">
    ID: <input type="text" name="id" id="id">    
    <input type="submit" value="Eliminar">
</form>


<h2>Listado de productos</h2>
{{#each products}}
    <p><strong>Id:</strong> {{id}}</p>    
    <p><strong>Title:</strong> {{title}} </p> 
    <p><strong>Description</strong> {{description}} </p> 
    <p><strong>Code:</strong> {{code}} </p> 
    <p><strong>Price:</strong>  {{price}} </p>
    <p><strong>Category:</strong> {{category}} </p> 
    <p><strong>Thumbnail:</strong> {{thumbnail}} </p> 
    <p><strong>Stock:</strong> {{stock}} </p> 
    <p>=================</p>
    {{else}}
        <p>La lista de productos está vacía</p>
{{/each}}


