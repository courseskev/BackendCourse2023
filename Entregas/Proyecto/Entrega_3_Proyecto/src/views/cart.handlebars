<style>
    .card-img-top {
        width: 100%;
        height: 300px;
        object-fit: cover;
        margin: auto;
    }
</style>

{{#if products.length}}
<div class="container mt-4">
    <div class="row">
        {{#each products}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{this.product.thumbnails}}" class="card-img-top" alt="Imagen del producto">
                <div class="card-body">
                    <h5 class="card-title">{{this.product.title}}</h5>
                    <p class="card-text">{{this.product.description}}</p>
                    <p class="card-text">Code: {{this.product.code}}</p>
                    <p class="card-text">Price: ${{this.product.price}}</p>
                    <p class="card-text">Availability: {{#if this.product.status}}Yes{{else}}No{{/if}}</p>
                    <p class="card-text">Stock: {{this.product.stock}}</p>
                    <p class="card-text">Category: {{this.product.category}}</p>
                    <p class="card-text">Quantity: {{this.quantity}}</p>
                    <a href="/product/{{this.product._id}}" class="btn btn-primary">More Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<div class="alert alert-warning" role="alert">
    This cart has no products
</div>
{{/if}}